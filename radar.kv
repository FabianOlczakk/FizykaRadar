#: import ew kivy.uix.effectwidget

<RadarDot>:
    canvas:
        Color:
            rgba: self.random_color
        Ellipse:
            pos: self.pos
            size: 20, 20


<BorderCircle@Widget>:
    canvas:
        Color:
            rgba: 0, 0.32, 0, 1
        Translate:
            xy: self.pos[0], self.pos[1]
        Line:
            width: 2
            circle: [0, 0, 600, -90 , 90]

<BorderCircleHuge@Widget>:
    canvas:
        Color:
            rgba: 0, 0.32, 0, 1
        Translate:
            xy: self.pos[0], self.pos[1]
        Line:
            width: 2
            circle: [0, 0, 800, -90 , 90]

<BottomLine@Widget>:
    canvas:
        Color:
            rgba: 0, 0.32, 0, 1
        Translate:
            xy: self.pos[0], self.pos[1]
        Line:
            width: 2
            points: 800, 0, -800, 0

<BorderCircleMedium@Widget>:
    canvas:
        Color:
            rgba: 0, 0.32, 0, 1
        Translate:
            xy: self.pos[0], self.pos[1]
        Line:
            width: 2
            circle: [0, 0, 400, -90 , 90]

<BorderCircleSmall@Widget>:
    canvas:
        Color:
            rgba: 0, 0.32, 0, 1
        Translate:
            xy: self.pos[0], self.pos[1]
        Line:
            width: 2
            circle: [0, 0, 200, -90 , 90]

<RotateButton>:

<RotationInput>:

<RotatingLineWidget>:
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            axis: 0,0,1
        Color:
            rgba: 0.2, 1, 0.3, 1
        Translate:
            xy: self.pos[0], self.pos[1]
        Line:
            points: 0, 0, 0, self.length * 1
            width: 2
        PopMatrix

ScreenManager:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Images/texture.jpg"

    Screen:
        id: main_float

        BoxLayout:
            size_hint: 1, 1
            orientation: "vertical"

            BoxLayout:
                background_color: 1, 1, 1, 1
                size_hint: 1, 0.1
                orientation: "horizontal"
                padding: 20

                MDLabel:
                    line: line
                    text: "Kąt nachylenia: " + str(self.line.current_angle + 90)
                    font_style: "H5"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1

                MDLabel
                    line: line
                    text: "Odlęgłość od ostatniego obiektu: " + str(self.line.distance_in_cm) + "cm"
                    font_style: "H5"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1


            FloatLayout:
                size_hint: 1, 0.9

                line: line

                EffectWidget:

                    BorderCircleHuge:
                        pos_hint: {"center_x": 1, "center_y": 0.7}

                    BorderCircle:

                    BorderCircleMedium:

                    BorderCircleSmall:

                    BottomLine:

                    RotatingLineWidget:
                        main_float: main_float
                        id: line
                        length: 800
                        angle: 0
